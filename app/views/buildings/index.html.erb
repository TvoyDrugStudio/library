<p id="notice"><%= notice %></p>

<h1>Библиотеки</h1>

<table>
  <thead>
    <tr>
      <th>Номер</th>
      <th>Название</th>
      <th>Адрес</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.number %></td>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= link_to 'Просмотр', building %></td>
        <td><%= link_to 'Изменить', edit_building_path(building) %></td>
        <td><%= link_to 'Удалить', building, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span style="font-size:140%"><%= link_to 'Добавить новую библиотеку', new_building_path %></span>
