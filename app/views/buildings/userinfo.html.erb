<h1>Информация об абонентах, прикрепленных к библиотекам</h1>

<table>
  <thead>
    <tr>
      <th>Номер библиотеки</th>
      <th>Название</th>

      <th>Номер абонента</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Билет читателя</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <!-- @comments is passed from controller to view -->
    <% @users.each do |user| %>           <!-- for loop -->
      <tr>
        <td><%= user.building.id %></td>         <!--get Post ID using reference -->
        <td><%= user.building.name %></td>      <!--get Post title using ref -->
        
        <td><%= user.id %></td>              <!--get Comment ID -->
        <td><%= user.lastname %></td>              <!--get Comment from Comment -->
        <td><%= user.name %></td>
        <td><%= user.number %></td>

        <td><%= link_to 'Просмотр абонента', user %></td>
        <td><%= link_to 'Изменить абонента', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить абонента', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <td><%= link_to 'Просмотр библиотеки', user.building %></td>
        <td><%= link_to 'Изменить библиотеку', edit_building_path(user.building) %></td>
        <td><%= link_to 'Удалить библиотеку', user.building, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
