<p id="notice"><%= notice %></p>

<h1>Выдачи</h1>

<table>
  <thead>
    <tr>
      <th>Книга</th>
      <th>Абонент</th>
      <th>Дата выдачи</th>
      <th>Дата возврата</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.book %></td>
        <td><%= rent.user %></td>
        <td><%= rent.give %></td>
        <td><%= rent.giveback %></td>
        <td><%= link_to 'Просмотр', rent %></td>
        <td><%= link_to 'Изменить', edit_rent_path(rent) %></td>
        <td><%= link_to 'Удалить', rent, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span style="font-size:140%"><%= link_to 'Добавить новую выдачу', new_rent_path %></span>
