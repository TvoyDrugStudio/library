<p id="notice"><%= notice %></p>

<h1>Книги</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Автор</th>
      <th>Шифр</th>
      <th>Дата публикации</th>
      <th>Дата поступления</th>
      <th>Библиотека</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.key %></td>
        <td><%= book.publication %></td>
        <td><%= book.arrival %></td>
        <td><%= book.building %></td>
        <td><%= link_to 'Просмотреть книгу', book %></td>
        <td><%= link_to 'Изменить книгу', edit_book_path(book) %></td>
        <td><%= link_to 'Удалить книгу', book, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span style="font-size:160%"><%= link_to 'Добавить новую книгу', new_book_path %></span>
