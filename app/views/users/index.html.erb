<p id="notice"><%= notice %></p>

<h1>Абоненты</h1>

<table>
  <thead>
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Адрес</th>
      <th>Телефон</th>
      <th>Номер билета</th>
      <th>Номер библиотеки</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.lastname %></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.phone %></td>
        <td><%= user.number %></td>
        <td><%= user.building %></td>
        <td><%= link_to 'Просмотр', user %></td>
        <td><%= link_to 'Изменить', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span style="font-size:160%"><%= link_to 'Добавить нового абонента', new_user_path %></span>
